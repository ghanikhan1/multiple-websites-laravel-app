{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:home\" \"npm run dev:loopstudio\" \"npm run dev:shortly\" \"npm run dev:fylo\"",
        "build": "concurrently \"npm run build:home\" \"npm run build:loopstudio\" \"npm run build:shortly\" \"npm run build:fylo\"",
        "dev:home": "vite --config vite-home.config.js",
        "build:home": "vite build --config vite-home.config.js",
        "dev:fylo": "vite --config vite-fylo.config.js",
        "build:fylo": "vite build --config vite-fylo.config.js",
        "dev:loopstudio": "vite --config vite-loopstudio.config.js",
        "build:loopstudio": "vite build --config vite-loopstudio.config.js",
        "dev:shortly": "vite --config vite-shortly.config.js",
        "build:shortly": "vite build --config vite-shortly.config.js"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5",
        "@tailwindcss/typography": "^0.5",
        "autoprefixer": "^10.4",
        "concurrently": "^9.1.2",
        "laravel-vite-plugin": "^1.0.0",
        "postcss": "^8.5.2",
        "postcss-nested": "^7.0.2",
        "resolve-url-loader": "^3.1",
        "sass": "^1.3",
        "sass-loader": "^8.0",
        "tailwindcss": "^3.0",
        "vite": "^5.0.0"
    }
}
